<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("~/Content/Kendo/css")*@

    @Styles.Render("~/Content/Kendo/2016.1.112/kendo.common.min.css")
    @Styles.Render("~/Content/Kendo/2016.1.112/kendo.default.min.css")
    @Styles.Render("~/Content/Kendo/2016.1.112/kendo.mobile.all.min.css")
    @Styles.Render("~/Content/Kendo/2016.1.112/kendo.dataviz.min.css")
    @Styles.Render("~/Content/Kendo/2016.1.112/kendo.dataviz.default.min.css")

    @*@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")*@
    @Scripts.Render("~/Scripts/kendo/2016.1.112/jquery.min.js")
    @Scripts.Render("~/Scripts/kendo/2016.1.112/jszip.min.js")
    @Scripts.Render("~/Scripts/kendo/2016.1.112/kendo.all.min.js")
    @Scripts.Render("~/Scripts/kendo/2016.1.112/kendo.grid.min.js")
    @Scripts.Render("~/Scripts/kendo/2016.1.112/kendo.aspnetmvc.min.js")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-uppercase">Welcome:@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Logout", "Logout", "Account", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Help", "Index", "Help", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Videos", "VideoList", "UploadFiles", new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "Account", new { @class = "nav-link" })
                    </li>
}
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

</body>
</html>